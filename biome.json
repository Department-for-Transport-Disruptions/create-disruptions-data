{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "dist",
            ".sst",
            ".sst*",
            ".vscode",
            "node_modules",
            ".next",
            "./site/public/scripts/all.js",
            ".open-next",
            "cdk.context.json",
            ".cache"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off",
                "useNodejsImportProtocol": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error",
                "useExhaustiveDependencies": "off"
            },
            "suspicious": {
                "noConsoleLog": "error",
                "noShadowRestrictedNames": "off",
                "noArrayIndexKey": "off"
            },
            "complexity": {
                "noForEach": "off"
            },
            "a11y": {
                "useButtonType": "off",
                "useKeyWithClickEvents": "off"
            }
        }
    },
    "overrides": [
        {
            "include": ["./cli-helpers/**"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noConsoleLog": "off"
                    }
                }
            }
        }
    ]
}
